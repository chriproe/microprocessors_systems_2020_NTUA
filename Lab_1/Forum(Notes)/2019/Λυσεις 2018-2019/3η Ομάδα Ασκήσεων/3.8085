SWAP Nible MACRO Q
	PUSH PSW
	MOV A,Q
	RLC
	RLC
	RLC
	RLC
	MOV Q,A
	
	MOV A,M
	RRC
	RRC
	RRC
	RRC
	MOV M,A
	POP PSW
ENDM


FILL MACRO ADDR, len, K
	PUSH PSW
	PUSH H
	
	LXI H,len		;Î® MVI A,len
	MOV A,L			;?
	LXI H,ADDR
START:
	MVI M,K
	INR M
	DCR A
	JNZ START
	
	POP H
	POP PSW
ENDM


RHLL MACRO n
	PUSH PSW
	PUSH B
	
	MVI A,n
	CPI 00H
	JZ FINISH
	MVI B,n
START:
	MOV A,L
	RAL
	MOV L,A
	MOV A,H
	RAL
	MOV H,A
	DCR B
	JNZ START
FINISH:
	POP B
	POP PSW
ENDM
